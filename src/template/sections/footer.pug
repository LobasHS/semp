mixin listLink(objLinks,className)
    each link, key in objLinks
        a(href="http://"+link class=className target="_blank")
            i(class="fa fa-" + key aria-hidden="true")
-var links={'facebook-official':'facebook.com','twitter':'twitter.com','google-plus':'google.com','linkedin':'linkedin.com'}

footer.footer
